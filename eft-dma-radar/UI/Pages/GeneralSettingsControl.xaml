                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnRaidStatsColor" Grid.Row="0" Grid.Column="4" Tag="RaidStats"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="raidStatsBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Status Text & Magazine Info -->
                                        <TextBlock Text="Status Text" Grid.Row="1" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnStatusTextColor" Grid.Row="1" Grid.Column="1" Tag="StatusText"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="statusTextBrush" Color="Red"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Magazine Info" Grid.Row="1" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnMagazineInfoColor" Grid.Row="1" Grid.Column="4" Tag="MagazineInfo"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="magazineInfoBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Energy & Hydration bar -->
                                        <TextBlock Text="Energy Bar" Grid.Row="2" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnEnergyBarColor" Grid.Row="2" Grid.Column="1" Tag="EnergyBar"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="energyBarBrush" Color="#D4C48A"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Hydration Bar" Grid.Row="2" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnHydrationBarColor" Grid.Row="2" Grid.Column="4" Tag="HydrationBar"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="hydrationBarBrush" Color="#5B9BD5"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Crosshair & Fireport Aim -->
                                        <TextBlock Text="Crosshair" Grid.Row="3" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnCrosshairColor" Grid.Row="3" Grid.Column="1" Tag="Crosshair"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="crosshairBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Fireport Aim" Grid.Row="3" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnFireportAimColor" Grid.Row="3" Grid.Column="4" Tag="FireportAim"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="fireportAimBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Aimbot FOV & Aimbot Lock -->
                                        <TextBlock Text="Aimbot FOV" Grid.Row="4" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnAimbotFOVColor" Grid.Row="4" Grid.Column="1" Tag="AimbotFOV"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="aimbotFOVBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Aimbot Lock" Grid.Row="4" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnAimbotLockColor" Grid.Row="4" Grid.Column="4" Tag="AimbotLock"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="aimbotLockBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Closest Player & Top Loot -->
                                        <TextBlock Text="Closest Player" Grid.Row="5" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnClosestPlayerColor" Grid.Row="5" Grid.Column="1" Tag="ClosestPlayer"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="closestPlayerBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Top Loot" Grid.Row="5" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnTopLootColor" Grid.Row="5" Grid.Column="4" Tag="TopLoot"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="topLootBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Mini Radar Theme & n/a -->
                                        <TextBlock Text="Radar Theme" Grid.Row="6" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnMiniRadarThemeColor" Grid.Row="6" Grid.Column="1" Tag="MiniRadarTheme"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="miniRadarThemeBrush" Color="WhiteSmoke"/>
                                            </Button.Background>
                                        </Button>
                                    </Grid>
                                </hc:SimpleStackPanel>
                            </Expander>

                            <!-- Interface Colors Section -->
                            <Expander x:Name="expInterfaceColors" Header="Interface Colors" Style="{StaticResource PanelExpander}" IsExpanded="True">
                                <hc:SimpleStackPanel Style="{StaticResource ExpanderContent}" Margin="2,8,2,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Primary accent -->
                                        <TextBlock Text="Primary Accent" Grid.Row="0" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnAccentColor" Grid.Row="0" Grid.Column="1" Tag="Interface.Accent"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="accentColor" Color="#0094FF"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Region colors -->
                                        <TextBlock Text="Region" Grid.Row="1" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnRegionColor" Grid.Row="1" Grid.Column="1" Tag="Interface.Region"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="regionColor" Color="#222222"/>
                                            </Button.Background>
                                        </Button>

                                        <TextBlock Text="Secondary Region" Grid.Row="1" Grid.Column="3" 
                                                  Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnSecondaryRegionColor" Grid.Row="1" Grid.Column="4" Tag="Interface.SecondaryRegion"
                                               Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="secondaryRegionColor" Color="#333333"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Border color -->
                                        <TextBlock Text="Border" Grid.Row="2" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnBorderColor" Grid.Row="2" Grid.Column="1" Tag="Interface.Border"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="borderColor" Color="#444444"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Radar Background color -->
                                        <TextBlock Text="Radar Background" Grid.Row="3" Grid.Column="0" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnRadarBackgroundColor" Grid.Row="3" Grid.Column="1" Tag="Interface.RadarBackground"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="radarBackgroundColor" Color="#000000"/>
                                            </Button.Background>
                                        </Button>

                                        <!-- Fuser Background color -->
                                        <TextBlock Text="Fuser Background" Grid.Row="3" Grid.Column="3" 
                                                   Style="{StaticResource ColorPickerLabel}"/>
                                        <Button x:Name="btnFuserBackgroundColor" Grid.Row="3" Grid.Column="4" Tag="Interface.FuserBackground"
                                                Style="{StaticResource ColorPickerButton}">
                                            <Button.Background>
                                                <SolidColorBrush x:Name="fuserBackgroundColor" Color="#000000"/>
                                            </Button.Background>
                                        </Button>
                                    </Grid>
                                </hc:SimpleStackPanel>
                            </Expander>
                        </hc:SimpleStackPanel>
                    </ScrollViewer>
                </hc:TabItem>

                <!-- Hotkeys Tab -->
                <hc:TabItem Header="Hotkeys">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Hotkey Configuration Expander -->
                        <Expander x:Name="expHotkeyConfiguration" Grid.Row="0" Header="Hotkey Configuration" Style="{StaticResource PanelExpander}" IsExpanded="True">
                            <hc:SimpleStackPanel Style="{StaticResource ExpanderContent}" Margin="0,8,2,0">
                                <GroupBox Header="Add/Remove Hotkeys" Style="{StaticResource TransparentGroupBoxStyle}">
                                    <hc:SimpleStackPanel Margin="8,0,8,0">
                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Action Selection -->
                                            <TextBlock Text="Action:" Grid.Row="0" Grid.Column="0" 
                                                       Style="{StaticResource LabelText}"
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,8,8"/>

                                            <ComboBox x:Name="cboAction" Grid.Row="0" Grid.Column="1"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Key"
                                                      hc:InfoElement.Placeholder="Select Action"
                                                      Margin="0,0,15,8"/>

                                            <!-- Key Selection -->
                                            <TextBlock Text="Key:" Grid.Row="0" Grid.Column="2" 
                                                       Style="{StaticResource LabelText}"
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,8,8"/>

                                            <controls:KeyInputBox x:Name="keyInputBox" 
                                                Grid.Row="0" Grid.Column="3"
                                                PlaceholderText="Select Key"
                                                Margin="0,0,0,8"/>

                                            <!-- Hotkey Type -->
                                            <TextBlock Text="Type:" Grid.Row="1" Grid.Column="0" 
                                                       Style="{StaticResource LabelText}"
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,8,8"/>

                                            <hc:SimpleStackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                                                                 Orientation="Horizontal" 
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,0,8">
                                                <RadioButton x:Name="rdbOnKey" 
                                                             Content="On Key" 
                                                             Margin="0,0,10,0" 
                                                             IsChecked="True"/>
                                                <RadioButton x:Name="rdbToggle" Content="Toggle"/>
                                            </hc:SimpleStackPanel>

                                            <!-- Action Buttons -->
                                            <hc:SimpleStackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                                                                 Orientation="Horizontal" 
                                                                 HorizontalAlignment="Right" 
                                                                 Margin="0,8,1,0">
                                                <Button x:Name="btnRemoveHotkey" Content="Remove Hotkey"
                                                        Margin="0,0,10,0"
                                                        Style="{StaticResource ButtonPrimary}"/>
                                                <Button x:Name="btnAddHotkey" Content="Add Hotkey"
                                                        Style="{StaticResource ButtonPrimary}" Width="94"/>
                                            </hc:SimpleStackPanel>
                                        </Grid>
                                    </hc:SimpleStackPanel>
                                </GroupBox>
                            </hc:SimpleStackPanel>
                        </Expander>

                        <!-- Hotkeys Display Table Expander -->
                        <Expander x:Name="expHotkeysDisplay" Grid.Row="1" Header="Active Hotkeys" Style="{StaticResource PanelExpander}" IsExpanded="True">
                            <Grid Margin="0,8,0,0">
                                <Border Style="{StaticResource ContainerListBorder}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Headers -->
                                        <Grid Grid.Row="0" Background="{DynamicResource RegionBrush}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Action" Grid.Column="0" Style="{StaticResource LabelText}"
                                                       FontWeight="Bold" Padding="10,5"/>
                                            <TextBlock Text="Key" Grid.Column="1" Style="{StaticResource LabelText}"
                                                       FontWeight="Bold" Padding="10,5"/>
                                            <TextBlock Text="Type" Grid.Column="2" Style="{StaticResource LabelText}"
                                                       FontWeight="Bold" Padding="10,5"/>
                                        </Grid>

                                        <!-- Bindable Hotkey List -->
                                        <ListView Grid.Row="1" x:Name="hotkeyListView"
                                                  ItemsSource="{Binding Hotkeys}"
                                                  BorderThickness="0" Background="Transparent"
                                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="Padding" Value="2,2"/>
                                                    <Setter Property="MinHeight" Value="24"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource DarkDefaultBrush}"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource TextIconBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource DarkDefaultBrush}"/>
                                                            <Setter Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListView.ItemContainerStyle>

                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Action}" Grid.Column="0" Style="{StaticResource LabelText}" Margin="5,0" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Key}" Grid.Column="1" Style="{StaticResource LabelText}" Margin="5,0" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Type}" Grid.Column="2" Style="{StaticResource LabelText}" Margin="5,0" TextTrimming="CharacterEllipsis"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Expander>
                    </Grid>
                </hc:TabItem>

                <!-- Config Tab -->
                <hc:TabItem Header="Config">
                    <ScrollViewer Style="{StaticResource PanelScrollViewer}">
                        <hc:SimpleStackPanel>
                            <Expander x:Name="expConfigManagement" Header="Config Management" 
                                      Style="{StaticResource PanelExpander}" IsExpanded="True">
                                <hc:SimpleStackPanel Style="{StaticResource ExpanderContent}" Margin="2,8,2,0">
                                    <!-- Current Config Display -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Current Config:" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <TextBlock x:Name="txtCurrentConfig" Text="config-eft-v2.json" 
                                                   Style="{StaticResource LabelText}" Grid.Column="1"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    <!-- Config Selection -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto" MinWidth="37"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Available Configs:" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Top" Grid.Column="0" Height="17" Margin="0,4,0,0"/>
                                        <ComboBox x:Name="cboConfigs" Grid.Column="1" Margin="5,0,5,0"
                                                  hc:InfoElement.Placeholder="Select config"/>
                                        <Button x:Name="btnRefreshConfigs" Tag="RefreshConfigs" 
                                                Grid.Column="2"
                                                Style="{StaticResource ButtonIcon}"
                                                Width="37" Height="28"
                                                ToolTip="Refresh Configs"
                                                hc:IconElement.Geometry="{StaticResource RotateRightGeometry}"
                                                hc:IconElement.Width="16"
                                                hc:IconElement.Height="16"/>
                                    </Grid>

                                    <!-- New Config Name -->
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="New Config Name:" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <hc:TextBox x:Name="txtNewConfigName" Grid.Column="1" Margin="5,0,0,0"
                                                    hc:InfoElement.Placeholder="Enter config name"/>
                                    </Grid>

                                    <!-- Action Buttons - First Row -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="btnSaveConfig" Content="Create New" Grid.Column="0" 
                                                Margin="5,0,5,0" Style="{StaticResource ButtonPrimary}"/>
                                        <Button x:Name="btnDeleteConfig" Content="Delete" Grid.Column="1" 
                                                Margin="5,0,0,0" Style="{StaticResource ButtonDanger}"/>
                                    </Grid>

                                    <!-- Action Buttons - Second Row (Clipboard Operations) -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="btnImportClipboard" Grid.Column="0" 
                                                Margin="0,0,5,0" Style="{StaticResource ButtonPrimary}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Path Width="14" Height="14" Margin="0,0,5,0" Stretch="Uniform"
                                                      Data="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z"
                                                      Fill="{DynamicResource TextIconBrush}"/>
                                                <TextBlock Text="Import from Clipboard"/>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnExportClipboard" Grid.Column="1" 
                                                Margin="5,0,0,0" Style="{StaticResource ButtonPrimary}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Path Width="14" Height="14" Margin="0,0,5,0" Stretch="Uniform"
                                                      Data="M9,16V10H5L12,3L19,10H15V16H9M5,20V18H19V20H5Z"
                                                      Fill="{DynamicResource TextIconBrush}"/>
                                                <TextBlock Text="Export to Clipboard"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>

                                    <!-- Reset Button -->
                                    <Button x:Name="btnResetConfig" Content="Reset to Default" Margin="0,0,0,0"
                                            HorizontalAlignment="Stretch" Style="{StaticResource ButtonWarning}"/>
                                </hc:SimpleStackPanel>
                            </Expander>
                        </hc:SimpleStackPanel>
                    </ScrollViewer>
                </hc:TabItem>
            </hc:TabControl>

            <!-- Resize handle -->
            <Grid Style="{StaticResource ResizeHandle}"
                  MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown">
                <Path Style="{StaticResource ResizeHandleIcon}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
